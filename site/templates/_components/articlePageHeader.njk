{% from '_components/mainNavigation.njk' import mainNavigation %}
{% from '_components/logo.njk' import logo %}

{% macro articlePageHeader(topline, headline, publishDate, updateDate, draft) %}
<div class="article-page-header">
  <div class="article-page-header__top-bar">
    <div class="article-page-header__logo">{{ logo(type='dark') }}</div>
    {{ mainNavigation(type = 'dark') }}
  </div>
  <div class="article-page-header__metadata">
    {{ publishDate | date }}
    {% if updateDate %}â€¢ Bearbeitet {{ updateDate | date }}{% endif %}
    /&nbsp;
    <div class="article-page-header__topline">{{ topline | tagLinks | safe }}</div>
    {% if draft %}/ Entwurf{% endif %}
  </div>
  <h1 class="article-page-header__title">{{ headline }}</h1>
  <svg class="article-page-header__graphic" viewBox="0 0 500 50" preserveAspectRatio="none">
    <path d="M0,0l0,50c63.994,-32.923 149.576,-35.395 263,-25c121.314,11.118 173.166,4.433 237,-25l-500,0Z" style="fill:#2d4053;"/>
  </svg>
</div>
{% endmacro %}