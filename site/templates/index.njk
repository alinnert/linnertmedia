{% extends '_layouts/default.njk' %}

{% set themeColor = globals.meta.color.secondaryLight %}
{% set pageDescription = globals.meta.description %}

{% from '_components/defaultPageHeader.njk' import defaultPageHeader %}
{% from '_components/articleTeaser.njk' import articleTeaser %}

{% block content %}
  {{ defaultPageHeader() }}
  <div class="page-content">
    <h1 class="page-content__title">
      Alle Beitr√§ge
      <a href="/feed.xml" class="page-content__title-link">Feed abonnieren</a>
    </h1>
    {% for entry in collections.blog %}
      {{ articleTeaser(
        title = entry.matter.data.title,
        url = entry.filename,
        date = entry.matter.data.date,
        tags = entry.matter.data.tags
      ) }}
    {% endfor %}
  </div>
{% endblock %}